/* 订单列表页样式 */
.container {
  min-height: 100vh;
  padding: 20rpx;
}

.orders {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: bold;
}

.order-items {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.order-item-product {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
}

.product-price {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-total {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: bold;
}

.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}

