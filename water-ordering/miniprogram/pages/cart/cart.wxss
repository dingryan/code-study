/* 购物车页样式 */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx;
}

.select-all-bar {
  background: white;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
}

.select-all-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.item-checkbox {
  margin-right: 15rpx;
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  background-image: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTUwIiBoZWlnaHQ9IjE1MCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cmVjdCB3aWR0aD0iMTUwIiBoZWlnaHQ9IjE1MCIgZmlsbD0iI2YwZjBmMCIvPjx0ZXh0IHg9IjUwJSIgeT0iNTAlIiBmb250LXNpemU9IjEyIiBmaWxsPSIjOTk5IiB0ZXh0LWFuY2hvcj0ibWlkZGxlIiBkeT0iLjNlbSI+5Zu+54mH5pyN5YqhPC90ZXh0Pjwvc3ZnPg==');
  background-size: cover;
  background-position: center;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-price {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: bold;
}

.item-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  background: white;
  border-radius: 5rpx;
  font-size: 28rpx;
  padding: 0;
}

.quantity-value {
  font-size: 28rpx;
  min-width: 50rpx;
  text-align: center;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4444;
  background: none;
  border: none;
  padding: 0;
}

.empty {
  text-align: center;
  padding: 200rpx 0;
}

.empty text {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.total {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-amount {
  font-size: 36rpx;
  color: #4A90E2;
  font-weight: bold;
}

.checkout-btn {
  background-color: #4A90E2;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

