<!-- 订单详情页 -->
<view class="container" wx:if="{{order}}">
  <view class="order-header">
    <text class="order-status">{{order.status_text}}</text>
    <text class="order-no">订单号: {{order.order_no}}</text>
  </view>
  
  <view class="order-items">
    <view class="section-title">商品信息</view>
    <view class="order-item-product" wx:for="{{order.items}}" wx:key="id">
      <image class="product-image" src="{{item.product_image || '/images/placeholder.png'}}" mode="aspectFill"></image>
      <view class="product-info">
        <text class="product-name">{{item.product_name}}</text>
        <text class="product-quantity">数量: x{{item.quantity}}</text>
      </view>
      <text class="product-price">¥{{item.price}}</text>
    </view>
  </view>
  
  <view class="order-address" wx:if="{{order.address}}">
    <view class="section-title">收货地址</view>
    <text class="address-text">{{order.address.name}} {{order.address.phone}}</text>
    <text class="address-text">{{order.address.province}}{{order.address.city}}{{order.address.district}}{{order.address.detail}}</text>
  </view>
  
  <view class="order-info">
    <view class="info-item">
      <text class="info-label">订单金额:</text>
      <text class="info-value">¥{{order.total_amount}}</text>
    </view>
    <view class="info-item" wx:if="{{order.payment_method}}">
      <text class="info-label">支付方式:</text>
      <text class="info-value">{{order.payment_method}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">下单时间:</text>
      <text class="info-value">{{order.created_at}}</text>
    </view>
  </view>
  
  <view class="order-actions" wx:if="{{order.status === 'pending'}}">
    <button class="btn-secondary" bindtap="cancelOrder">取消订单</button>
    <button class="btn-primary" bindtap="payOrder">立即支付</button>
  </view>
</view>

<view class="loading" wx:else>
  <text>加载中...</text>
</view>

