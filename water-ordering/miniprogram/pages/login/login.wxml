<!-- 登录页 -->
<view class="container">
  <view class="header">
    <text class="title">手机号登录</text>
    <text class="subtitle">请输入手机号和验证码</text>
  </view>
  
  <view class="form">
    <!-- 手机号输入 -->
    <view class="input-group">
      <text class="label">手机号</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入手机号" 
        maxlength="11"
        value="{{phone}}"
        bindinput="onPhoneInput"
      />
    </view>
    
    <!-- 验证码输入 -->
    <view class="input-group">
      <text class="label">验证码</text>
      <view class="code-row">
        <input 
          class="input code-input" 
          type="number" 
          placeholder="请输入验证码" 
          maxlength="6"
          value="{{code}}"
          bindinput="onCodeInput"
        />
        <button 
          class="send-btn {{countdown > 0 ? 'disabled' : ''}}"
          bindtap="sendCode"
          disabled="{{countdown > 0}}"
        >
          {{countdown > 0 ? countdown + 's' : '发送验证码'}}
        </button>
      </view>
    </view>
    
    <!-- 登录按钮 -->
    <button class="login-btn" bindtap="login">登录</button>
  </view>
</view>

