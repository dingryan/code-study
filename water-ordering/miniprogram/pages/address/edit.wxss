/* 地址编辑页样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.form {
  background: white;
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  min-height: 120rpx;
  padding: 10rpx 0;
}

.checkbox-item {
  justify-content: space-between;
}

.location-btn {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #4A90E2;
}

.location-icon {
  font-size: 32rpx;
}

.save-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #4A90E2;
  color: white;
  border-radius: 0;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

